{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "types": ["@playwright/test", "@cucumber/cucumber"]
    },
    "include": ["src/test/steps/*.ts"],
    "exclude": ["node_modules"]
  }
  